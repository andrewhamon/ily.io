.expose > div
  max-width: 1000px
  margin: 0 auto
  padding: 20px 0
  margin-bottom: 40px

  +large()
    padding: 40px 0
    display: flex
    justify-content: space-between
    > article
      margin: 0 20px

  +not-large()
    > article
      margin-bottom: 40px

  > article
    text-align: center
    flex-basis: 33%

    p
      max-width: 500px
      margin: 0 auto

  h3
    margin-top: 20px
    margin-bottom: 5px
