.product-selector
  > .product-item
    transition: all 0.2s ease

    &.-disabled
      color: #ccc

      button
        background: #ccc

    .button
      transition: all 0.4s ease

      i
        max-width: 0
        opacity: 0
        transition: all 0.5s ease
        color: accent

    &:hover:not(.-selected):not(.-disabled)
      background: alpha(accent, 10%)

    &:hover:not(.-disabled), &.-selected
      .button
        transform: scale(1.07)

    &.-selected
      background: accent
      color: white
      border-color: accent

      i
        max-width: 20px
        opacity: 1

      .button
        background: white
        color: accent
