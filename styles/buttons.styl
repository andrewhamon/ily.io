.knightgrams
  .button
    -webkit-appearance: none
    appearance: none
    border: none
    font: inherit
    background: #eee
    padding: 10px
    border-radius: 5px
    outline: 0
    cursor: pointer
    transition: all 0.2s ease
    text-decoration: none

    &:disabled, &.disabled
      cursor: not-allowed

    &:hover:not(:disabled):not(.disabled)
      transform: scale(1.03)

    &.-primary
      background: accent
      color: white
      font-weight: 300

      &.disabled, &:disabled
        background: #888
        opacity: 0.2
