.knightgrams
  color: red

  .site-section
    margin-top: 80px
    padding: 0 20px

  #app
    padding-bottom: 0

  header[role='main']
    text-align: center
    padding-top: 50px
    padding-bottom: 260px

    img
      max-width: 352px
      width: 100%
      height: auto

  &.-thanks, &.-orders
    padding-bottom: 80px

    header[role='main']
      padding-bottom: 30px
      background: accent

    p
      max-width: 500px
      line-height: 1.5
      text-align: left
      margin: 15px auto

  &.-orders
    .site-section
      margin-top: 0

  .recipient-information
    margin-bottom: 60px

  .exp-field, .cvc
    text-align: center

  .order-list
    max-width: 500px
    margin: 0 auto
    margin-bottom: 40px

  .order
    padding: 15px
    margin-bottom: 15px
    border: 1px solid lighten(accent, 60%)
    border-radius: 4px
    display: flex
    justify-content: space-between
    align-items: center

    p
      margin: 0

      &.producttitle
        font-weight: bold

        em
          font-weight: normal
          color: #aaa

      &.sentto
        color: #777

        em
          font-weight: 400

      &.status
        color: white
        padding: 3px 10px
        display: inline-block
        border-radius: 3px
        font-size: 0.8em
        color: #ccc
        border: 1px solid

        &.ready
          border: 1px solid accent
          color: white
          background: accent

footer
  text-align: left
  background: accent
  padding: 20px
  margin-top: 100px

  h3, p
    max-width: 600px
    margin: 20px auto
    color: white

    &:last-child
      text-align: right

.map-link
  display: block
  margin-bottom: 20px

  img
    max-width: 500px
    border-radius: 5px
    width: 100%
