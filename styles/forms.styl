form
  max-width: 400px
  margin: 0 auto

input:not([type='checkbox']), textarea
  font: inherit
  padding: 10px
  font-weight: 300
  line-height: 1.2 !important
  border-radius: 4px
  border: 1px solid #ccc
  width: 100%
  box-sizing: border-box
  outline: 0
  transition: all 0.2s ease

  &:focus
    box-shadow: 0px 0px 3px alpha(accent, 75%)
    border: 1px solid alpha(accent, 75%)

.form-group
  margin: 10px 0

textarea
  height: 100px
